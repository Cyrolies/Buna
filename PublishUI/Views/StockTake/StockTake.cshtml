@using CyroTechPortal;
@{
 ViewBag.Title = Localizer.Current.GetString("StockTake");
}

<div class="row">
<div class="col-md-12">
<div class="box box-primary">

<div id="viewModalStockTake" ></div>
	<div class="box-body">
		<div class="row">
			<div class="col-md-12">
				<div id="responseMessageStockTake" ></div>
			</div>
		</div>
		<div id="table" class="table-responsive">
		<table id= "tblGridStockTake" class="table no-margin">
		<thead>
			<tr>
		<th>StockTakeID</th>
		<th>@Localizer.Current.GetString("Quantity")</th>
		<th>@Localizer.Current.GetString("Location")</th>
		<th>@Localizer.Current.GetString("StockTakeDate")</th>
		<th>@Localizer.Current.GetString("CreatedBy")</th>
		<th></th>
		<th></th>
			</tr>
		</thead>
		</table>
		</div>
	</div>
</div>
</div>
	@section Header{
	<h1>
	@Localizer.Current.GetString("StockTake")
	</h1>
	<ol class="breadcrumb">
	<li><a href = "/" ><i class="fa fa-home"></i>@Localizer.Current.GetString("Home")</a></li>
	<li><a href = "#" class="active">@Localizer.Current.GetString("StockTake")</a></li>
	</ol>
}

@section scripts
{

	<script type="text/javascript">

		$(document).ready(function() {

			$('#responseMessageStockTake').html("");

			var datatableStockTake = $('#tblGridStockTake').dataTable({
			"bServerSide": true,
			"bAutoWidth": true,
			"sAjaxSource": '@Url.Action("GetStockTakeList", "StockTake")',
			"fnServerData": function(sSource, aoData, fnCallback) {
			$('#responseMessageStockTake').html("");
			$.ajax({
				"dataType": 'json',
				"contentType": "application/json; charset = utf-8",
				"type": "GET",
				"url": sSource,
				"data": aoData,
				"success": fnCallback,
				"error": function(xhr, textStatus, error){
					$('#responseMessageStockTake').html(xhr.responseText);
				}
			});
			},
			"bProcessing":true,
			"dom": 'T<"clear"><Blp>rtip',
			"lengthMenu": [[10, 100, 500, 1000, -1], [10, 100, 500, 1000, "All"]],
		"aoColumns": [
			 { "mDataProp": "StockTakeID" },
			 { "mDataProp": "Quantity" },
			 { "mDataProp": "Location" },
			 { "mDataProp": "StockTakeDate" },
			 { "mDataProp": "CreatedByID" },
			 {"mDataProp": "EditButton" },
			 {"mDataProp": "DeleteButton" },
			 { "mDataProp": "CreatedByDesc" },
		],
		"columnDefs": [{ visible: false, targets: [0,7] },{ orderable: false, targets: [5,6] },{"render": function(data, type, row) { if (data == null) { return ""; } else { var date = new Date(parseInt(data.substr(6)));return formatDate(date.toDateString()); }},"targets": [3]},{"render": function(data, type, row) {  return row.CreatedByDesc;},"targets": [4]} ],
		"buttons": [
			{
				text: '<i class="fa fa-plus" aria-hidden="true"></i>',
				action: function(e, dt, node, config) {
				$.ajax({
					type: 'POST',
					url: '@Url.Action("GetStockTake", "StockTake")',
					data: { id: '' },
					dataType: "text",
					success: function(result) {
					if (result)
					{
						$('#viewModalStockTake').html(result);
					}
					else {
						ShowNotification(false, data.errorMessage)
					}
					}
				});
				},
					titleAttr: '@Localizer.Current.GetString("Add")'
				},
				{
					text: '<i class="fa fa-file-excel-o"></i>',
					action: function(e, dt, node, config)
				{
				$.ajax({
					type: 'POST',
					url: '@Url.Action("ExportForm", "StockTake")',
					data: { dataList: JSON.stringify(dt.ajax.params()) },
					success: function(result) {
					if (result)
					{
						$('#viewModalStockTake').html(result);
					}
					else {
						ShowNotification(false, data.errorMessage)
					}
					}
				});
				},
					titleAttr: '@Localizer.Current.GetString("Export")'
				},
				{
					extend: 'copyHtml5',
					text: '<i class="fa fa-files-o"></i>',
					titleAttr: 'Copy'
				},
				{
					extend: 'print',
					text: '<i class="fa fa-print" aria-hidden="true"></i>',
					titleAttr: '@Localizer.Current.GetString("Print")',
					customize: function(win)
					{
						$(win.document.body)
						.css('font-size', '10pt')
						.prepend(
						 '<img src="http://datatables.net/media/images/logo-fade.png" style="position:absolute; top:0; left:0;" />'
						);
						$(win.document.body).find('table')
						.addClass('compact')
						.css('font-size', 'inherit');
					}
				}
		],
		"language": {
			"lengthMenu":"  " + display.value + " _MENU_ " + records.value,
			"zeroRecords": zeroRecords.value,
			"info":  showing.value + " _PAGE_ " + " - _PAGES_", 
			"infoEmpty": infoEmpty.value, 
			"infoFiltered":  "(" + filtered.value + " _MAX_ " + totalrecords.value + ")", 
			"loadingRecords": loadingRecords.value, 
            "processing": '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>',
			"paginate": {
				"first": first.value, 
				"last": last.value, 
				"next": next.vaue, 
				"previous": previous.value 
			},
		}
		}).yadcf([
			{
				 column_number: 1,
				filter_type: "text",
				filter_delay: 500
			},
			{
				 column_number: 2,
				filter_type: "text",
				filter_delay: 500
			},
			{
				 column_number: 3,
				filter_type: "range_date",
				date_format: "yyyy-mm-dd",
				filter_delay: 500
			},
			{
				 column_number: 4,
				filter_type: "select",
				filter_delay: 500
			},
		], { cumulative_filtering: true });

		$('#tblGridStockTake').on('click', '.btnEdit', function(e)
		{
			e.preventDefault();
			var value = $(this).attr("data-id");
			$.ajax({
				type: 'POST',
				url: '@Url.Action("GetStockTake", "StockTake")',
				data: { id: value },
				dataType: "text",
				success: function(result)
				{
				if (result)
				{
				$('#viewModalStockTake').html(result);
				}
				else
				{
					ShowNotification(false, data.errorMessage)
				}
			}
			});
		});

		$('#tblGridStockTake').on('dblclick', 'tr', function(e)
		{
			e.preventDefault();
			var value = $('#tblGridStockTake').DataTable().row(this).data()["StockTakeID"];
			$.ajax({
				type: 'POST',
				url: '@Url.Action("GetStockTake", "StockTake")',
				data: { id: value },
				dataType: "text",
				success: function(result)
				{
				if (result)
				{
				$('#viewModalStockTake').html(result);
				}
				else
				{
					ShowNotification(false, data.errorMessage)
				}
			}
			});
		});

		$('#tblGridStockTake').on('click', '.btnDelete', function(e)
		{
			if (confirm('Are you sure you want to delete'))
			{
			e.preventDefault();
			var value = $(this).attr("data-id");
			$.ajax({
				type: 'POST',
				url: '@Url.Action("DeleteStockTake", "StockTake")',
				data: { id: value },
				dataType: "text",
				success: function(result) {
				$('#viewModalStockTake').html(result);
				$('#tblGridStockTake').DataTable().ajax.reload();
				},
			 });
			 }
		 });

		$('a.toggle-vis').on('click', function(e)
		{
			e.preventDefault();
			var column = $('#tblGridStockTake').DataTable().column($('#tblGridStockTake').attr('data-column'));
			column.visible(!column.visible());
		 });


		 });

	</script>
	}
