@using CyroTechPortal;
@model DALEFModel.WorkOrderPart
<script src = "@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" ></script>
	<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="content">
				<div class="box-header">
					<button type = "button" name="btnclose" id="btnclose" class="close" data-dismiss="modal">x</button>
					<h4 class="modal-title">@Html.Label(@Html.Encode(Localizer.Current.GetString("WorkOrderPart")), new { @class = "col-md-2 control-label" })</h4>
				</div>

				<div id = "result" ></div>
				@using(Ajax.BeginForm("EditWorkOrderPart", "WorkOrderPart", new AjaxOptions
					{
						HttpMethod = "POST",
						InsertionMode = InsertionMode.Replace,
						UpdateTargetId = "result"
					}))
					{
						try {
						@* @Html.AntiForgeryToken()*@
						@Html.ValidationSummary(true)

						<div class="col-md-12"> 
				<div class="row">
				<div class="box-default">
				<div class="box-header with-border">
						<h3 class="box-title">@Html.Encode(Localizer.Current.GetString("GroupBoxDetails"))</h3>

				<div class="box-body">
							@Html.HiddenFor(o => o.OrgID)

							@Html.HiddenFor(o => o.VersionNo)

							@Html.HiddenFor(o => o.WorkOrderPartID)

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("WorkOrderID")))
							@Html.CustomDropDownListFor(st => st.WorkOrderID)
							@Html.CustomValidationMessageFor(o => o.WorkOrderID)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("PartID")))
							@Html.CustomDropDownListFor(st => st.PartID)
							@Html.CustomValidationMessageFor(o => o.PartID)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Quantity")))
							@Html.CustomTextBoxFor(o => o.Quantity)
							@Html.CustomValidationMessageFor(o => o.Quantity)
							</div>
						</div>

							@Html.HiddenFor(o => o.CreatedByID)

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("ReturnDate")))
							@Html.CustomTextBoxFor(o => o.ReturnDate)
							@Html.CustomValidationMessageFor(o => o.ReturnDate)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("IsActive")))
							@Html.CustomCheckBoxFor(o => o.IsActive)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("CreateDateTime")))
							@Html.CustomTextBoxFor(o => o.CreateDateTime)
							@Html.CustomValidationMessageFor(o => o.CreateDateTime)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("ChangeDateTime")))
							@Html.CustomTextBoxFor(o => o.ChangeDateTime)
							@Html.CustomValidationMessageFor(o => o.ChangeDateTime)
							</div>
						</div>

				</div>
						</div>
						</div>
						</div>
						</div>

						<div class="modal-footer">
						<button type = "submit" class="btn btn-default">@Localizer.Current.GetString("Save")</button>
						</div>
						}
						catch (Exception ex)
						{
						<script type = "text/javascript" >
							ShowNotification(false, '@ex.Message.Replace("'","\'").Replace("\r\n"," <br/> ")');
						</script>
						}
					}
			</div>
		</div>
	</div>
	<script>
		$(document).ready(function () {
            $('input[type="datetime"]').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 1901
            });
		$('#modal1').attr('class', 'modal fade').attr('aria-labelledby', 'myModalLabel');
		$('#modal1').modal('show');
		document.getElementById("btnclose").onclick = function () { $('#tblGridWorkOrderPart').DataTable().ajax.reload(); };
		});
	</script>
