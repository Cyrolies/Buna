		</div>
	</div>
</div>
</div>
	@section Header{
	<h1>
	@Localizer.Current.GetString("Person")
	</h1>
	<ol class="breadcrumb">
	<li><a href = "/" ><i class="fa fa-home"></i>@Localizer.Current.GetString("Home")</a></li>
	<li><a href = "#" class="active">@Localizer.Current.GetString("Person")</a></li>
	</ol>
}

@section scripts
{

	<script type="text/javascript">

		$(document).ready(function() {

			//Filter drop down data
			var filterList1 = [];
			$.ajax({
					type: 'POST',
					url: '@Url.Action("PrePopulateInput", "Base")',
					data: {
						field: 'StpDataID as ID,DataDescription as Description',
						table: 'StpData',
						where: ' StpDataTypeID = 14',
						orderby: 'DataDescription',
					},
					dataType: 'json',
					async: false,
					success: function (data) {

						for (var i = 0; i < data.result.length; i++) {
                            filterList1.push(
								{
									"value": data.result[i].id,
									"label": data.result[i].Description
								}
							)
						}
					}
					,
					error: function (data) {

						alert('Error populating filter ' + JSON.stringify(data));
					}
				});

			var filterList2 = [];
			$.ajax({
					type: 'POST',
					url: '@Url.Action("PrePopulateInput", "Base")',
					data: {
						field: 'StpDataID as ID,DataDescription as Description',
						table: 'StpData',
						where: ' StpDataTypeID = 29',
						orderby: 'DataDescription',
					},
					dataType: 'json',
					async: false,
					success: function (data) {

						for (var i = 0; i < data.result.length; i++) {
                            filterList2.push(
								{
									"value": data.result[i].id,
									"label": data.result[i].Description
								}
							)
						}
					}
					,
					error: function (data) {

						alert('Error populating filter ' + JSON.stringify(data));
					}
				});

			var filterList3 = [];
			$.ajax({
					type: 'POST',
					url: '@Url.Action("PrePopulateInput", "Base")',
					data: {
						field: 'StpDataID as ID,DataDescription as Description',
						table: 'StpData',
						where: ' StpDataTypeID = 28',
						orderby: 'DataDescription',
					},
					dataType: 'json',
					async: false,
					success: function (data) {

						for (var i = 0; i < data.result.length; i++) {
                            filterList3.push(
								{
									"value": data.result[i].id,
									"label": data.result[i].Description
								}
							)
						}
					}
					,
					error: function (data) {

						alert('Error populating filter ' + JSON.stringify(data));
					}
				});

			

			$('#responseMessagePerson').html("");

			var datatablePerson = $('#tblGridPerson').dataTable({
			"bServerSide": true,
			"bAutoWidth": true,
			"sAjaxSource": '@Url.Action("GetPersonList", "Person")',
			"fnServerData": function(sSource, aoData, fnCallback) {
			$('#responseMessagePerson').html("");
			$.ajax({
				"dataType": 'json',
				"contentType": "application/json; charset = utf-8",
				"type": "GET",
				"url": sSource,
				"data": aoData,
				"success": fnCallback,
				"error": function(xhr, textStatus, error){
					$('#responseMessagePerson').html(xhr.responseText);
				}
			});
			},
			"bProcessing":true,
			"dom": 'T<"clear"><Blp>rtip',
			"lengthMenu": [[10, 100, 500, 1000, -1], [10, 100, 500, 1000, "All"]],
		"aoColumns": [
			 { "mDataProp": "PersonID" },
			 { "mDataProp": "StpTitleID" },
			 { "mDataProp": "Firstnames" },
			 { "mDataProp": "Surname" },
			 { "mDataProp": "StpPersonTypeID" },
			 { "mDataProp": "StpPersonCategoryID" },
			 { "mDataProp": "MobilePhone" },
			 {"mDataProp": "EditButton" },
			 {"mDataProp": "DeleteButton" },
			 { "mDataProp": "TitleDesc" },
			 { "mDataProp": "PersonTypeDesc" },
			 { "mDataProp": "PersonCategoryDesc" },
		],
		"columnDefs": [{ visible: false, targets: [0,9,10,11] },{ orderable: false, targets: [7,8] },{"render": function(data, type, row) {  return row.TitleDesc;},"targets": [1]},{"render": function(data, type, row) {  return row.PersonTypeDesc;},"targets": [4]},{"render": function(data, type, row) {  return row.PersonCategoryDesc;},"targets": [5]} ],
		"buttons": [
			{
				text: '<i class="fa fa-plus" aria-hidden="true"></i>',
				action: function(e, dt, node, config) {
				$.ajax({
					type: 'POST',
					url: '@Url.Action("GetPerson", "Person")',
					data: { id: '' },
					dataType: "text",
					success: function(result) {
					if (result)
					{
						$('#viewModalPerson').html(result);
					}
					else {
						ShowNotification(false, data.errorMessage)
					}
					}
				});
				},
					titleAttr: '@Localizer.Current.GetString("Add")'
				},
				{
					text: '<i class="fa fa-file-excel-o"></i>',
					action: function(e, dt, node, config)
				{
				$.ajax({
					type: 'POST',
					url: '@Url.Action("ExportForm", "Person")',
					data: { dataList: JSON.stringify(dt.ajax.params()) },
					success: function(result) {
					if (result)
					{
						$('#viewModalPerson').html(result);
					}
					else {
						ShowNotification(false, data.errorMessage)
					}
					}
				});
				},
					titleAttr: '@Localizer.Current.GetString("Export")'
				},
				{
					extend: 'copyHtml5',
					text: '<i class="fa fa-files-o"></i>',
					titleAttr: 'Copy'
				},
				{
					extend: 'print',
					text: '<i class="fa fa-print" aria-hidden="true"></i>',
					titleAttr: '@Localizer.Current.GetString("Print")',
					customize: function(win)
					{
						$(win.document.body)
						.css('font-size', '10pt')
						.prepend(
						 '<img src="http://datatables.net/media/images/logo-fade.png" style="position:absolute; top:0; left:0;" />'
						);
						$(win.document.body).find('table')
						.addClass('compact')
						.css('font-size', 'inherit');
					}
				}
		],
		"language": {
			"lengthMenu":"  " + display.value + " _MENU_ " + records.value,
			"zeroRecords": zeroRecords.value,
			"info":  showing.value + " _PAGE_ " + " of _PAGES_ from _TOTAL_ entries", 
			"infoEmpty": infoEmpty.value, 
			"infoFiltered":  "(" + filtered.value + " _MAX_ " + totalrecords.value + ")", 
			"loadingRecords": loadingRecords.value, 
			"processing": '<div class="loader"> <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i></div> ', 
			"paginate": {
				"first": first.value, 
				"last": last.value, 
				"next": next.vaue, 
				"previous": previous.value 
			},
		}
		}).yadcf([
			{
				column_number: 1,
				filter_type: "select",
				data: filterList1,
				filter_delay: 500
			},
			{
				 column_number: 2,
				filter_type: "text",
				filter_delay: 500
			},
			{
				 column_number: 3,
				filter_type: "text",
				filter_delay: 500
			},
			{
				column_number: 4,
				filter_type: "select",
				data: filterList2,
				filter_delay: 500
			},
			{
				column_number: 5,
				filter_type: "select",
				data: filterList3,
				filter_delay: 500
			},
			{
				 column_number: 6,
				filter_type: "text",
				filter_delay: 500
			},
		], { cumulative_filtering: true });

		$('#tblGridPerson').on('click', '.btnEdit', function(e)
		{
			e.preventDefault();
			$('#progressIcon').show();
			var value = $(this).attr("data-id");
			$.ajax({
				type: 'POST',
				url: '@Url.Action("GetPerson", "Person")',
				data: { id: value },
				dataType: "text",
				success: function(result)
				{
				$('#progressIcon').hide();
				if (result)
				{
				$('#viewModalPerson').html(result);
				}
				else
				{
					ShowNotification(false, data.errorMessage)
				}
			}
			});
		});

		$('#tblGridPerson').on('dblclick', 'tr', function(e)
		{
			e.preventDefault();
			$('#progressIcon').show();
			var value = $('#tblGridPerson').DataTable().row(this).data()["PersonID"];
			$.ajax({
				type: 'POST',
				url: '@Url.Action("GetPerson", "Person")',
				data: { id: value },
				dataType: "text",
				success: function(result)
				{
				$('#progressIcon').hide();
				if (result)
				{
				$('#viewModalPerson').html(result);
				}
				else
				{
					ShowNotification(false, data.errorMessage)
				}
			}
			});
		});

		$('#tblGridPerson').on('click', '.btnDelete', function(e)
		{
			if (confirm('Are you sure you want to delete'))
			{
			e.preventDefault();
			$('#progressIcon').show();
			var value = $(this).attr("data-id");
			$.ajax({
				type: 'POST',
				url: '@Url.Action("DeletePerson", "Person")',
				data: { id: value },
				dataType: "text",
				success: function(result) {
				$('#progressIcon').hide();
				$('#viewModalPerson').html(result);
				$('#tblGridPerson').DataTable().ajax.reload();
				},
			 });
			 }
		 });

		$('a.toggle-vis').on('click', function(e)
		{
			e.preventDefault();
			var column = $('#tblGridPerson').DataTable().column($('#tblGridPerson').attr('data-column'));
			column.visible(!column.visible());
		 });


		 });

	</script>
	}
