@using CyroTechPortal;
@{
 ViewBag.Title = Localizer.Current.GetString("Person");
}

<div class="row">
<div class="col-md-12">
<div class="box box-primary">

<div id="viewModalPerson" ></div>
	<div class="box-body">
		<div class="row">
			<div class="col-md-12">
				<div id="responseMessagePerson" ></div>
			</div>
		</div>
		<div id="table" class="table-responsive">
		<table id= "tblGridPerson" class="table no-margin">
		<thead>
			<tr>
		<th>PersonID</th>
		<th>@Localizer.Current.GetString("StpTitleID")</th>
