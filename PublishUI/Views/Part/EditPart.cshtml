@using CyroTechPortal;
@model DALEFModel.Part
<script src = "@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" ></script>
	<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="content">
				<div class="box-header">
					<button type = "button" name="btnclose" id="btnclose" class="close" data-dismiss="modal">x</button>
					<h4 class="modal-title">@Html.Label(@Html.Encode(Localizer.Current.GetString("Part")), new { @class = "col-md-2 control-label" })</h4>
				</div>

				<div id = "result" ></div>
				@using(Ajax.BeginForm("EditPart", "Part", new AjaxOptions
					{
						HttpMethod = "POST",
						InsertionMode = InsertionMode.Replace,
						UpdateTargetId = "result"
					}))
					{
						try {
						@* @Html.AntiForgeryToken()*@
						@Html.ValidationSummary(true)

						<div class="col-md-12"> 
				<div class="row">
				<div class="box-default">
				<div class="box-header with-border">
						<h3 class="box-title">@Html.Encode(Localizer.Current.GetString("GroupBoxPart details"))</h3>

				<div class="box-body">
							@Html.HiddenFor(o => o.OrgID)

							@Html.HiddenFor(o => o.PartID)

							@Html.HiddenFor(o => o.VersionNo)

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Code")))
							@Html.CustomTextBoxFor(o => o.Code)
							@Html.CustomValidationMessageFor(o => o.Code)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("StpPartCategoryID")))
							@Html.CustomDropDownListFor(st => st.StpPartCategoryID)
							@Html.CustomValidationMessageFor(o => o.StpPartCategoryID)
							</div>
						</div>

						<div class="col-md-12">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Description")))
							@Html.CustomTextBoxAreaFor(o => o.Description)
							@Html.CustomValidationMessageFor(o => o.Description)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Model")))
							@Html.CustomTextBoxFor(o => o.Model)
							@Html.CustomValidationMessageFor(o => o.Model)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("SerialNo")))
							@Html.CustomTextBoxFor(o => o.SerialNo)
							@Html.CustomValidationMessageFor(o => o.SerialNo)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Manufacturer")))
							@Html.CustomTextBoxFor(o => o.Manufacturer)
							@Html.CustomValidationMessageFor(o => o.Manufacturer)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Price")))
							@Html.CustomTextBoxFor(o => o.Price)
							@Html.CustomValidationMessageFor(o => o.Price)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("StpUnitOfMeasureID")))
							@Html.CustomDropDownListFor(st => st.StpUnitOfMeasureID)
							@Html.CustomValidationMessageFor(o => o.StpUnitOfMeasureID)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Style")))
							@Html.CustomTextBoxFor(o => o.Style)
							@Html.CustomValidationMessageFor(o => o.Style)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Size")))
							@Html.CustomTextBoxFor(o => o.Size)
							@Html.CustomValidationMessageFor(o => o.Size)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Colour")))
							@Html.CustomTextBoxFor(o => o.Colour)
							@Html.CustomValidationMessageFor(o => o.Colour)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("Supplier")))
							@Html.CustomTextBoxFor(o => o.Supplier)
							@Html.CustomValidationMessageFor(o => o.Supplier)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("WarrantyExpireDate")))
							@Html.CustomTextBoxFor(o => o.WarrantyExpireDate)
							@Html.CustomValidationMessageFor(o => o.WarrantyExpireDate)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("IsActive")))
							@Html.CustomCheckBoxFor(o => o.IsActive)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("CreatedByID")))
							@Html.CustomDropDownListFor(st => st.CreatedByID)
							@Html.CustomValidationMessageFor(o => o.CreatedByID)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("ChangeDateTime")))
							@Html.CustomTextBoxFor(o => o.ChangeDateTime)
							@Html.CustomValidationMessageFor(o => o.ChangeDateTime)
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
							@Html.Label(@Html.Encode(Localizer.Current.GetString("CreateDateTime")))
							@Html.CustomTextBoxFor(o => o.CreateDateTime)
							@Html.CustomValidationMessageFor(o => o.CreateDateTime)
							</div>
						</div>

				</div>
						</div>
						</div>
						</div>
						</div>

						<div class="modal-footer">
						<button type = "submit" class="btn btn-default">@Localizer.Current.GetString("Save")</button>
						</div>
						}
						catch (Exception ex)
						{
						<script type = "text/javascript" >
							ShowNotification(false, '@ex.Message.Replace("'","\'").Replace("\r\n"," <br/> ")');
						</script>
						}
					}
			</div>
		</div>
	</div>
	<script>
		$(document).ready(function () {
		$('#modal1').attr('class', 'modal fade').attr('aria-labelledby', 'myModalLabel');
		$('#modal1').modal('show');
		document.getElementById("btnclose").onclick = function () { $('#tblGridPart').DataTable().ajax.reload(); };
		});
	</script>
