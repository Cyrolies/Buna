@using CyroTechPortal;
@{
 ViewBag.Title = Localizer.Current.GetString("StockReport");
}

<div class="row">
<div class="col-md-12">
<div class="box box-primary">

<div id="viewModalStockReport" ></div>
	<div class="box-body">
		<div class="row">
			<div class="col-md-12">
				<div id="responseMessageStockReport" ></div>
			</div>
		</div>
		<div id="table" class="table-responsive">
		<table id= "tblGridStockReport" class="table no-margin">
		<thead>
            <tr>
                <th>@Localizer.Current.GetString("StockTakeDate")</th>
                <th>@Localizer.Current.GetString("CountQuantity")</th>
                <th>@Localizer.Current.GetString("AvailableQuantity")</th>
                <th>@Localizer.Current.GetString("Location")</th>
                <th>@Localizer.Current.GetString("Code")</th>
                <th>@Localizer.Current.GetString("Model")</th>
                <th>@Localizer.Current.GetString("SerialNo")</th>
                <th>@Localizer.Current.GetString("Description")</th>
                <th>@Localizer.Current.GetString("UnitOfMeasure")</th>
                <th>@Localizer.Current.GetString("Price")</th>
                <th>@Localizer.Current.GetString("CreatedBy")</th>
               
            </tr>
		</thead>
		</table>
		</div>
	</div>
</div>
</div>
	@section Header{
	<h1>
	@Localizer.Current.GetString("StockReport")
	</h1>
	<ol class="breadcrumb">
	<li><a href = "/" ><i class="fa fa-home"></i>@Localizer.Current.GetString("Home")</a></li>
	<li><a href = "#" class="active">@Localizer.Current.GetString("StockReport")</a></li>
	</ol>
}

@section scripts
{

	<script type="text/javascript">

		$(document).ready(function() {

			$('#responseMessageStockReport').html("");

			var datatableStockReport = $('#tblGridStockReport').dataTable({
			"bServerSide": true,
			"bAutoWidth": true,
			"sAjaxSource": '@Url.Action("GetStockReport", "StockReport")',
			"fnServerData": function(sSource, aoData, fnCallback) {
			$('#responseMessageStockReport').html("");
			$.ajax({
				"dataType": 'json',
				"contentType": "application/json; charset = utf-8",
				"type": "GET",
				"url": sSource,
				"data": aoData,
				"success": fnCallback,
				"error": function(xhr, textStatus, error){
					$('#responseMessageStockReport').html(xhr.responseText);
				}
			});
			},
			"bProcessing":true,
			"dom": 'T<"clear"><Blp>rtip',
			"lengthMenu": [[10, 100, 500, 1000, -1], [10, 100, 500, 1000, "All"]],
		"aoColumns": [
            { "mDataProp": "StockTakeDate" },
            { "mDataProp": "CountQuantity" },
            { "mDataProp": "AvailableQuantity" },
            { "mDataProp": "Location" },
            { "mDataProp": "Code" },
            { "mDataProp": "Model" },
            { "mDataProp": "SerialNo" },
            { "mDataProp": "Description" },
            { "mDataProp": "UnitOfMeasure" },
            { "mDataProp": "Price" },
            { "mDataProp": "CreatedBy" }
		],
                "columnDefs": [{ "render": function (data, type, row) { if (data == null) { return ""; } else { var date = new Date(parseInt(data.substr(6))); return formatDate(date.toDateString()); } }, "targets": [0] }],
		"buttons": [
			
				{
					text: '<i class="fa fa-file-excel-o"></i>',
					action: function(e, dt, node, config)
				{
				$.ajax({
					type: 'POST',
					url: '@Url.Action("ExportForm", "StockReport")',
					data: { dataList: JSON.stringify(dt.ajax.params()) },
					success: function(result) {
					if (result)
					{
						$('#viewModalStockReport').html(result);
					}
					else {
						ShowNotification(false, data.errorMessage)
					}
					}
				});
				},
					titleAttr: '@Localizer.Current.GetString("Export")'
				},
				{
					extend: 'copyHtml5',
					text: '<i class="fa fa-files-o"></i>',
					titleAttr: 'Copy'
				},
				{
					extend: 'print',
					text: '<i class="fa fa-print" aria-hidden="true"></i>',
					titleAttr: '@Localizer.Current.GetString("Print")',
					customize: function(win)
					{
						$(win.document.body)
						.css('font-size', '10pt')
						.prepend(
						 '<img src="http://datatables.net/media/images/logo-fade.png" style="position:absolute; top:0; left:0;" />'
						);
						$(win.document.body).find('table')
						.addClass('compact')
						.css('font-size', 'inherit');
					}
				}
		],
		"language": {
			"lengthMenu":"  " + display.value + " _MENU_ " + records.value,
			"zeroRecords": zeroRecords.value,
			"info":  showing.value + " _PAGE_ " + " - _PAGES_", 
			"infoEmpty": infoEmpty.value, 
			"infoFiltered":  "(" + filtered.value + " _MAX_ " + totalrecords.value + ")", 
			"loadingRecords": loadingRecords.value, 
            "processing": '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>', 
			"paginate": {
				"first": first.value, 
				"last": last.value, 
				"next": next.vaue, 
				"previous": previous.value 
			},
		}
		}).yadcf([
			{
				column_number: 0,
                filter_type: "range_date",
                date_format: "yyyy-mm-dd",
                filter_delay: 500
			},
            {
                column_number: 1,
                filter_type: "text",
                filter_delay: 500
            },
			{
				column_number: 2,
				filter_type: "text",
				filter_delay: 500
			},
			{
				column_number: 3,
                filter_type: "text",
                filter_delay: 500
			},
            {
                column_number: 4,
                filter_type: "text",
                filter_delay: 500
			},
            {
                column_number: 5,
                filter_type: "text",
                filter_delay: 500
			},
            {
                column_number: 6,
                filter_type: "text",
                filter_delay: 500
			},
            {
                column_number: 7,
                filter_type: "text",
                filter_delay: 500
			},
            {
                column_number: 8,
                filter_type: "text",
                filter_delay: 500
			},
            {
                column_number: 9,
                filter_type: "text",
                filter_delay: 500
			},
            {
                column_number: 10,
                filter_type: "text",
                filter_delay: 500
            },
		], { cumulative_filtering: true });

		

		

		$('a.toggle-vis').on('click', function(e)
		{
			e.preventDefault();
			var column = $('#tblGridStockReport').DataTable().column($('#tblGridStockReport').attr('data-column'));
			column.visible(!column.visible());
		 });


		 });

	</script>
	}
