@using CyroTechPortal;
@{
    ViewBag.Title = Localizer.Current.GetString("WorkOrder") + " - "+ Localizer.Current.GetString("WorkOrderCode");
}
@*<div id="progress" class="loader"> <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i></div>*@
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">

            <div id="viewModalWorkOrder"></div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="responseMessageWorkOrder"></div>

                    </div>
                </div>
                <div id="table" class="table-responsive">
                    <table id="tblGridWorkOrder" class="table no-margin">
                        <thead>
                            <tr>
                                <th>WorkOrderID</th>
                                <th>@Localizer.Current.GetString("WorkOrderCode")</th>
                                <th>@Localizer.Current.GetString("IsQuote")</th>
                                <th>@Localizer.Current.GetString("Description")</th>
                                <th>@Localizer.Current.GetString("StpWorkOrderType")</th>
                                <th>@Localizer.Current.GetString("Technician")</th>
                                <th>@Localizer.Current.GetString("StpClient")</th>
                                <th>@Localizer.Current.GetString("ClientPhone")</th>
                                <th>@Localizer.Current.GetString("ScheduledDate")</th>
                                <th>@Localizer.Current.GetString("CompletedDate")</th>
                                <th>@Localizer.Current.GetString("CreateDateTime")</th>
                                <th>@Localizer.Current.GetString("CreatedBy")</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @section Header{
        <h1>
            @Localizer.Current.GetString("WorkOrder")
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-home"></i>@Localizer.Current.GetString("Home")</a></li>
            <li><a href="#" class="active">@Localizer.Current.GetString("WorkOrder")</a></li>
        </ol>
    }

    @section scripts
{

        <script type="text/javascript">

		$(document).ready(function() {

			$('#responseMessageWorkOrder').html("");
            $('#progress').hide();
			var datatableWorkOrder = $('#tblGridWorkOrder').dataTable({
			"bServerSide": true,
			"bAutoWidth": true,
			"sAjaxSource": '@Url.Action("GetWorkOrderList", "WorkOrder")',
			"fnServerData": function(sSource, aoData, fnCallback) {
			$('#responseMessageWorkOrder').html("");
				$.ajax({
					"dataType": 'json',
					"contentType": "application/json; charset = utf-8",
					"type": "GET",
					"url": sSource,
					"data": aoData,
					"success": fnCallback,
                	"error": function(xhr, textStatus, error){
					$('#responseMessageWorkOrder').html(xhr.responseText);
				}
			});
			},
			"bProcessing":true,
			"dom": 'T<"clear"><Blp>rtip',
			"lengthMenu": [[10, 100, 500, 1000, -1], [10, 100, 500, 1000, "All"]],
		"aoColumns": [
			 { "mDataProp": "WorkOrderID" },
			 { "mDataProp": "WorkOrderCode" },
			 { "mDataProp": "IsQuote" },
			 { "mDataProp": "Description" },
			 { "mDataProp": "WorkOrderTypeDesc" },
            { "mDataProp": "TechnicianDesc" },
			 { "mDataProp": "ClientDesc" },
			 { "mDataProp": "ClientPhone" },
			 { "mDataProp": "ScheduledDate" },
			 { "mDataProp": "CompletedDate" },
			 { "mDataProp": "CreateDateTime" },
            { "mDataProp": "CreatedByDesc" },
			 {"mDataProp": "EditButton" },
			 {"mDataProp": "DeleteButton" },

		],
		"columnDefs": [{ orderable: false, targets: [12,13] },{"render": function(data, type, row) { if (data == null) { return ""; } else { var date = new Date(parseInt(data.substr(6)));return formatDate(date.toDateString()); }},"targets": [8,9,10]}],
		"buttons": [
			{
				text: '<i class="fa fa-plus" aria-hidden="true"></i>',
				action: function (e, dt, node, config) {
                    //alertify.set('notifier', 'position', 'top-center');
                    //alertify.notify("<div class=\"loader\"> <i class=\"fa fa-spinner fa-spin fa-3x fa-fw\"></i></div>");
                  //  $('#progress').show();
				$.ajax({
					type: 'POST',
					url: '@Url.Action("GetWorkOrder", "WorkOrder")',
					data: { id: '' },
					dataType: "text",
					success: function(result) {
					if (result)
					{
						$('#viewModalWorkOrder').html(result);
                       // $('#progress').hide();
					}
					else {
						ShowNotification(false, data.errorMessage)
					}
					}
				});
				},
					titleAttr: '@Localizer.Current.GetString("Add")'
				},
				{
					text: '<i class="fa fa-file-excel-o"></i>',
					action: function(e, dt, node, config)
				{
				$.ajax({
					type: 'POST',
					url: '@Url.Action("ExportForm", "WorkOrder")',
					data: { dataList: JSON.stringify(dt.ajax.params()) },
					success: function(result) {
					if (result)
					{
						$('#viewModalWorkOrder').html(result);
					}
					else {
						ShowNotification(false, data.errorMessage)
					}
					}
				});
				},
					titleAttr: '@Localizer.Current.GetString("Export")'
				},
				{
					extend: 'copyHtml5',
					text: '<i class="fa fa-files-o"></i>',
					titleAttr: 'Copy'
				},
				{
					extend: 'print',
					text: '<i class="fa fa-print" aria-hidden="true"></i>',
					titleAttr: '@Localizer.Current.GetString("Print")',
					customize: function(win)
					{
						$(win.document.body)
						.css('font-size', '10pt')
						.prepend(
						 '<img src="http://datatables.net/media/images/logo-fade.png" style="position:absolute; top:0; left:0;" />'
						);
						$(win.document.body).find('table')
						.addClass('compact')
						.css('font-size', 'inherit');
					}
				}
		],
		"language": {
			"lengthMenu":"  " + display.value + " _MENU_ " + records.value,
			"zeroRecords": zeroRecords.value,
			"info":  showing.value + " _PAGE_ " + " - _PAGES_",
			"infoEmpty": infoEmpty.value,
			"infoFiltered":  "(" + filtered.value + " _MAX_ " + totalrecords.value + ")",
			"loadingRecords": loadingRecords.value,
            "processing": '<div class="loader"> <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i></div>',
			"paginate": {
				"first": first.value,
				"last": last.value,
				"next": next.vaue,
				"previous": previous.value
			},
		}
		}).yadcf([
			{
				 column_number: 1,
				filter_type: "text",
				filter_delay: 500
			},
			{
				 column_number: 2,
				filter_type: "select2",
				data: ["True", "False"]
			},
			{
                column_number: 3,
                filter_type: "text",
                filter_delay: 500
			},
			{
				 column_number: 4,
				filter_type: "select2",
				filter_delay: 500
			},
			{
				 column_number: 5,
				filter_type: "select2",
				filter_delay: 500
			},
			{
				 column_number: 6,
				filter_type: "select2",
				filter_delay: 500
			},
			{
				 column_number: 7,
				filter_type: "text",
				filter_delay: 500
			},
			{
				 column_number: 8,
				filter_type: "range_date",
				date_format: "yyyy-mm-dd",
				filter_delay: 500
			},
			{
				 column_number: 9,
				filter_type: "range_date",
				date_format: "yyyy-mm-dd",
				filter_delay: 500
			},
			{
				 column_number: 10,
				filter_type: "range_date",
				date_format: "yyyy-mm-dd",
				filter_delay: 500
			},
			{
				 column_number: 11,
				filter_type: "select2",
				filter_delay: 500
			},
		], { cumulative_filtering: true });

		$('#tblGridWorkOrder').on('click', '.btnEdit', function(e)
		{
			e.preventDefault();
			var value = $(this).attr("data-id");
			$.ajax({
				type: 'POST',
				url: '@Url.Action("GetWorkOrder", "WorkOrder")',
				data: { id: value },
				dataType: "text",
				success: function(result)
				{
				if (result)
				{
				$('#viewModalWorkOrder').html(result);
				}
				else
				{
					ShowNotification(false, data.errorMessage)
				}
			}
			});
		});

		$('#tblGridWorkOrder').on('dblclick', 'tr', function(e)
		{
			e.preventDefault();
			var value = $('#tblGridWorkOrder').DataTable().row(this).data()["WorkOrderID"];
			$.ajax({
				type: 'POST',
				url: '@Url.Action("GetWorkOrder", "WorkOrder")',
				data: { id: value },
				dataType: "text",
				success: function(result)
				{
				if (result)
				{
				$('#viewModalWorkOrder').html(result);
				}
				else
				{
					ShowNotification(false, data.errorMessage)
				}
			}
			});
		});

		$('#tblGridWorkOrder').on('click', '.btnDelete', function(e)
		{
			if (confirm('Are you sure you want to delete'))
			{
			e.preventDefault();
			var value = $(this).attr("data-id");
			$.ajax({
				type: 'POST',
				url: '@Url.Action("DeleteWorkOrder", "WorkOrder")',
				data: { id: value },
				dataType: "text",
				success: function(result) {
				$('#viewModalWorkOrder').html(result);
				$('#tblGridWorkOrder').DataTable().ajax.reload();
				},
			 });
			 }
		 });

		$('a.toggle-vis').on('click', function(e)
		{
			e.preventDefault();
			var column = $('#tblGridWorkOrder').DataTable().column($('#tblGridWorkOrder').attr('data-column'));
			column.visible(!column.visible());
		 });


		 });

        </script>
    }
