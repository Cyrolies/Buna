@using CyroTechPortal;

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">

            @*<div id="table" class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
